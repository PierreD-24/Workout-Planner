@model WorkoutPlanner.Models.Workout

@{
    ViewData["Title"] = "Log Workout";
}

<h2>Log Workout</h2>

<form asp-action="LogWorkout" method="post">
    <div class="mb-3">
        <label asp-for="Day" class="form-label"></label>
        <input asp-for="Day" class="form-control" type="date" />
    </div>

    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <select asp-for="Name" class="form-select">
            <option value="">-- Select Workout --</option>
            @foreach (var workout in ViewBag.WorkoutNames)
            {
                <option value="@workout">@workout</option> 
            }
        </select>
    </div>

    <div class="mb-3">
        <label asp-for="Sets" class="form-label"></label>
        <input asp-for="Sets" class="form-control" type="number" />
    </div>

    <div class="mb-3">
        <label asp-for="Reps" class="form-label"></label>
        <input asp-for="Reps" class="form-control" type="number" />
    </div>

    <div class="mb-3">
        <label asp-for="Weight" class="form-label"></label>
        <input asp-for="Weight" class="form-control" type="number" />
    </div>

    <button type="submit" class="btn btn-primary">Log Workout</button>
</form>
